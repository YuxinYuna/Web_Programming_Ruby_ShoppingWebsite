<h1>Product Management</h1>

<%= link_to 'Add New Product', new_admin_product_path, class: 'theme-button btn btn-primary mb-4' %>

<% if @products.any? %>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <!-- Product Image -->
          <%= image_tag product.image_url.present? ? product.image_url.url : 'placeholder.png', alt: product.name, class: 'card-img-top product-image' %>

          <!-- Card Body -->
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= truncate(product.description, length: 100) %></p>
            <p class="card-text"><strong>Price: </strong><%= number_to_currency(product.price) %></p>
            <p class="card-text"><strong>Stock: </strong><%= product.stock %></p>

            <!-- Action Buttons (Icons) -->
            <div class="d-flex justify-content-start">
              <%= link_to admin_product_path(product), class: 'btn btn-info btn-sm me-2' do %>
                <i class="bi bi-eye"></i> View
              <% end %>

              <%= link_to edit_admin_product_path(product), class: 'btn btn-warning btn-sm me-2' do %>
                <i class="bi bi-pencil"></i> Edit
              <% end %>

              <%= button_to admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
                <i class="bi bi-trash"></i> Delete
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>