
<div class="auth-container">
  <div class="auth-card p-4 shadow-sm rounded-3">
    <h1 class="text-center">Sign In</h1>
    <p class="text-center">Please enter your email and password to sign in.</p>

    <%= form_with scope: :user, url: user_session_path, local: true, class: "auth-form" do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
      
      <div class="d-flex justify-content-between align-items-center mb-3">
        <%= f.submit "Sign In", class: "theme-button btn btn-primary w-100" %>
      </div>
    <% end %>

    <div class="auth-footer text-center mt-3">
      <p>Don't have an account? <%= link_to "Sign Up", new_user_registration_path, class: "auth-link text-decoration-none" %></p>
      <p><%= link_to "Forgot your password?", new_user_password_path, class: "auth-link text-decoration-none" %></p>
    </div>
  </div>
</div>