<div class="auth-container">
  <div class="auth-card p-4 shadow-sm rounded-3">
    <h1 class="text-center">Forgot Your Password?</h1>
    <p class="text-center">Enter your email address, and we'll send you instructions to reset your password.</p>

    <%= form_with scope: :user, url: password_path(resource_name), local: true, class: "auth-form" do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between align-items-center mb-3">
        <%= f.submit "Send Reset Instructions", class: "theme-button btn btn-primary w-100" %>
      </div>
    <% end %>

    <div class="auth-footer text-center mt-3">
      <p><%= link_to "Back to Sign In", new_user_session_path, class: "auth-link text-decoration-none" %></p>
    </div>
  </div>
</div>