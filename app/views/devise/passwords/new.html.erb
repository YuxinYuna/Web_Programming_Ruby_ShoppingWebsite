<div class="auth-container">
  <div class="auth-card">
    <h1>Forgot Your Password?</h1>
    <p>Enter your email address, and we'll send you instructions to reset your password.</p>

    <%= form_with scope: :user, url: password_path(resource_name), local: true, class: "auth-form" do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.submit "Send Reset Instructions", class: "auth-button" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <p><%= link_to "Back to Sign In", new_user_session_path, class: "auth-link" %></p>
    </div>
  </div>
</div>
